// - byebug
Select show:
.row
    - @search.results.each_with_index do |show, i|
        - break if i == 3
        // - byebug
        .col-lg-2.col-md-3.col-sm-4.col-xs-6.choice-tiles{id: "show-#{i}-#{show.id}"}
            .center.col-1
                %h4 #{show.name}
            .center.col-1
                - if !show.poster_path.blank?
                    = link_to (image_tag @base_url + @poster_size + show.poster_path, class: "img-fluid center"), show.name, id: "#{show.name} button"
