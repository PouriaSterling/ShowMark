// Hide parts of form
$('#selection-seasons-heading').hide();
$('#selection-seasons').hide();
$('#selection-episodes-heading').hide();
$('#selection-episodes').hide();
$('#episode-info-heading').hide();
$('#episode-info').hide();
$('#priority').hide()
- if @search == 0
    $('#errors').text('FILL THE FIELD')
    $('#errors').show();
- else
    - if @search.total_results == 0
        // show doesnt exist
        // - flash[:warning] = '#{@name} could not be found in TMDb'
        $('#errors').text('#{@name} could not be found in TMDb')
        $('#errors').show();
        $('#selection-shows').hide();
    - else
        // show exists
        $('#errors').hide();
        $('#bookmark #selection-shows').html('#{escape_javascript(render :partial => "selectShow")}');
        $('#watchlist #selection-shows').html('#{escape_javascript(render :partial => "selectShow")}');
        $('#bookmark #selection-shows').slideDown(350);
        $('#watchlist #selection-shows').slideDown(350);
