%h1 Listing shows

%table
  %thead
    %tr
      %th Name
      %th Season
      %th Episode
      %th
      %th
      %th

  %tbody
    - @shows.each do |show|
      %tr
        %td= show.name
        %td= show.season
        %td= show.episode
        %td= link_to 'Show', show
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Destroy', show, :method => :delete, :data => { :confirm => 'Are you sure?' }

