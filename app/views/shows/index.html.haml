%div.container-fluid
  - config = Tmdb::Configuration.get
  - base_url = config.images.base_url
  - poster_size = config.images.logo_sizes[4]
  %div.row
    - @shows.each do |show|
      %div.col-md-4
        // - byebug
        = image_tag base_url + poster_size + show.image


%table
  %thead
    %tr
      %th Name
      %th Season
      %th Episode
      %th
      %th
      %th

  %tbody
    - @shows.each do |show|
      %tr
        %td= show.name
        %td= show.season
        %td= show.episode
        %td= link_to 'Show', show
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Destroy', show, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Show', new_show_path
